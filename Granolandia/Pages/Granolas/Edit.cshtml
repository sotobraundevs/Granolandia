@page "{granolaId:int?}"
@model Granolandia.Pages.Granolas.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editando @Model.Granola.Nombre</h2>


<form method="post">
	<input type="hidden" asp-for="Granola.Id" />
	<div class="form-group">
		<label asp-for="Granola.Nombre"></label>
		<input asp-for="Granola.Nombre" class="form-control" />
		<span class="text-danger" asp-validation-for="Granola.Nombre"></span>
	</div>

	<div class="form-group">
		<label asp-for="Granola.Descripcion"></label>
		<input asp-for="Granola.Descripcion" class="form-control" />
		<span class="text-danger" asp-validation-for="Granola.Descripcion"></span>
	</div>

	<div class="form-group">
		<label asp-for="Granola.Tipo"></label>
		<select class="form-control" asp-for="Granola.Tipo"
									asp-items="Model.Tipos"

>


</select>
	</div>



	<button type="submit" class="btn btn-primary">Guardar <i class="glyphicon glyphicon-save"></i></button>

</form>